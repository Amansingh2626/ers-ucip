<assembly>
	<id>rpm</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/conf</directory>
			<outputDirectory>conf/uciplink
			</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/doc</directory>
			<outputDirectory>doc/uciplink</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/database</directory>
			<outputDirectory>etc/dist/uciplink/database</outputDirectory>
			<includes>
				<!-- if you change this name you need to change it in ersinstall module -->
				<include>uciplink/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/perl</directory>
			<outputDirectory>lib/perl/Seamless/ERSInstall</outputDirectory>
			<includes>
				<include>uciplink.pm</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib/uciplink</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
	</dependencySets>
</assembly>